package dAO;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import dTO.RegisterDTO;

public class RegisterDAO 
{
	public boolean doRegister(RegisterDTO userDTO) throws SQLException, ClassNotFoundException
	{
		boolean getResult=false;
		Connection con = null;
		
		PreparedStatement pstmt1 =null;
		PreparedStatement pstmt2 = null;

		ResultSet rs1 =null;
	
		try
		{	
			con = CommonDAO.getConnection();
			
			pstmt1=con.prepareStatement(CommonSQL.GET_USER_ID);
			pstmt1.setString(1, userDTO.getUserid());
			rs1=pstmt1.executeQuery();
			rs1.first();
			String db_userid =rs1.getString("userid");
			
			if(!(userDTO.getUserid().equals(db_userid)))
			{
				pstmt2=con.prepareStatement(CommonSQL.Register_User_SQL);
				pstmt2.setString(1, userDTO.getNameDTO().getSalutation());
				pstmt2.setString(2, userDTO.getNameDTO().getFirstname());
				pstmt2.setString(3, userDTO.getNameDTO().getMiddlename());
				pstmt2.setString(4, userDTO.getNameDTO().getLastname());
				pstmt2.setString(5, userDTO.getDateOfBirth());
				pstmt2.setString(6, userDTO.getGender());
				pstmt2.setString(7, userDTO.getUserid());
				pstmt2.setString(8, userDTO.getPassword());
				pstmt2.setString(9, userDTO.getPhone());
				pstmt2.setString(10, userDTO.getEmailid());
				//pstmt1.setString(11,"N");
			
				int noOfRowsEffected1 = pstmt2.executeUpdate();
				if(noOfRowsEffected1>0)
				{
					getResult=true;	
				}
			}
			else
			{
				System.out.println("User id "+db_userid+" already exists.");
				
			}
		}
//		catch(ClassNotFoundException e)
//		{	//e.printStackTrace();
//			System.out.println("Class not found exception generated");
//		}
		catch(SQLException e)
		{
			//e.printStackTrace();
			System.out.println("SQL exception generated");
			
		}
		finally
		{
			if(rs1!=null)
			{
				rs1.close();
			}
			if(pstmt2!=null)
			{
				pstmt2.close();
			}
			if(pstmt1!=null)
			{
				pstmt1.close();
			}
			
			if(con!=null)
			{
				con.close();
			}
		}

		return getResult;
			
	}
}
